{
    "name": "ray-light",
    "displayName": "Ray Light",
    "description": "A light and easy to use theme",
    "publisher": "r-villalobos",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Themes",
        "Snippets",
        "Other"
    ],
    "main": "./code/scripts.js",
    "activationEvents": [
        "onCommand:doSomething",
        "onCommand:openTerminal"
    ],
    "contributes": {
        "commands": [
            {
                "command": "doSomething",
                "title": "Show something in a window"
            },
            {
                "command": "openTerminal",
                "title": "Open a terminal"
            }
        ],
        "themes": [
            {
                "label": "Ray Light",
                "uiTheme": "vs",
                "path": "./themes/Ray Light-color-theme.json"
            },
            {
                "label": "Ray Light Alternate",
                "uiTheme": "vs",
                "path": "./themes/Ray Light Alternate-color-theme.json"
            }
        ],
        "snippets": [
            {
                "language": "markdown",
                "path": "./snippets/markdown.json"
            }
        ]
    }
}